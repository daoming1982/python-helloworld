{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_ENV": "development"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true,
            "justMyCode": true,
            
            // ⭐ 新增这一行: 告诉 VS Code 在调试器启动后运行 'open-browser' 任务
            "postDebugTask": "open-browser" 
        }
    ]
}